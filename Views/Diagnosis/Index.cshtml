@model Diagnostic
<section class="welcome-area section-padding3">
  <div class="container">
    <div class="row">
      <div class="col-lg-7">
        <div class="welcome-text mt-5 mt-lg-0">
          <h2>Diagnostic</h2>
          <p class="pt-3"><b>Maladie : </b>@Model.ShowListMaladies()</p>
          <a href="#" class="template-btn mt-3">learn more</a>
        </div>
      </div>
    </div>
  </div>
</section>
<section class="feature-area section-padding">
  <div class="container">
    <h3>Liste des medicaments proposes</h3>
    <table class="table table-bordered">
      <thead>
        <th>#</th>
        <th>nom</th>
        <th>prix unitaire</th>
        <th>nombre de prises</th>
        <th>prix total</th>
      </thead>
      <tbody>
        @for (int i = 0; i < Model.Medicaments.Count; i++)
        {
          <tr>
            <td>@(i + 1)</td>
            <td>@Model.Medicaments[i].Nom</td>
            <td>@Model.Medicaments[i].PrixUnitaire Ar</td>
            <td>@Model.Medicaments[i].NombrePrise</td>
            <td>@Model.Medicaments[i].GetPrixTotal() Ar</td>
          </tr>
        }
      </tbody>
    </table>
  </div>
</section>


